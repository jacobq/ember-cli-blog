{{#if isEditing}}
	<p><button data-test-id="done-editing-post-button" {{action 'doneEditing'}}>Done</button></p>
	<p data-test-id="post-title-input-wrapper">{{input type="text" value=post.title class="form-control" placeholder="Post title"}}</p>
	<p>{{power-select-blockless options=authors selected=post.author onchange=(action (mut post.author)) labelPath="name" placeholder="Post author"}}</p>
  <p>{{input type="text" value=post.excerpt class="form-control" placeholder="Post exercept"}}</p>
  <p>{{markdown-editor value=post.body  placeholder="Post content" rows="5"}}</p>

  <p><button data-test-id="delete-post-button" {{action 'deletePost' class="btn btn-default"}}>Delete</button></p>
{{else}}
	<p><button data-test-id="edit-post-button" {{action 'edit'}}>Edit</button></p>
{{/if}}
